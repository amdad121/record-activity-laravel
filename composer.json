{
    "name": "amdadulhaq/record-activity-laravel",
    "description": "User activity for Laravel",
    "keywords": [
        "Amdadul Haq",
        "laravel",
        "record-activity-laravel"
    ],
    "homepage": "https://github.com/amdad121/record-activity-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Amdadul Haq",
            "email": "amdadulhaq781@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2|^8.3|^8.4|^8.5",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^1.0|^2.0",
        "larastan/larastan": "^2.0|^3.0",
        "laravel/pint": "^1.26",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.0|^3.0|^4.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0|^4.0"
    },
    "autoload": {
        "psr-4": {
            "AmdadulHaq\\RecordActivity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AmdadulHaq\\RecordActivity\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "refactor": "vendor/bin/rector process",
        "refactor:check": "vendor/bin/rector process --dry-run",
        "lint": "vendor/bin/pint",
        "lint:check": "vendor/bin/pint --test"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "AmdadulHaq\\RecordActivity\\RecordActivityServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
